<!doctype html>
<html>
  <head>
    <title>Home</title>
    <link rel="stylesheet" href="/styles/home.css">
    <link rel="preconnect" 
     href="https://fonts.googleapis.com">
    <link rel="preconnect" 
    href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
  </head>
  <body>
    <div class="main-div">
      <form class="search-div" method="post" action="/word/search">
        <div class="search-icon">
          <button type="submit">
            <img src="/img/search-vector.svg">
          </button>
        </div>
        <div class="search-input-div">
          <input type="text" placeholder="Search"
          class="search-input" name="english">
        </div>
      </form>

      <div class="word-list">
        <div class="word-row-div">
          <% if (!wordIsEmpty){ %>
            <% words.forEach(word => { %>
                <%- include('components/wordCard' , {word}) %>
            <%});%> 
          <%}else{%>
            <p>there is no any words yet</p>
          <% } %>

        </div>
      </div>
      <div class="navbar">

        <a href="/profile-page">
          <img src="/img/navbar-profile.svg"
          alt="Profile" class="nav-item" >
        </a>

        <a href="/addword-page">
          <img src="/img/navbar-pluse.svg" 
            alt="Add" class="nav-item">
        </a>

        <a href="/list-page">
          <img src="/img/navbar-list.svg" 
            alt="List" class="nav-item">
        </a>

        <a href="/home-page">
          <img src="/img/navbar-home.svg" 
          alt="Home" class="nav-item">
        </a>
        
      </div>
    </div>
  </body>
</html>