<!DOCTYPE html>
<html>
  <head>
    <title>Profile</title>
    <link rel="stylesheet" href="styles/profile.css">
    <link rel="preconnect" 
     href="https://fonts.googleapis.com">
    <link rel="preconnect" 
    href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  </head>
  <body>
    <div class="main-div">
      <div class="inner-div">
        <div class="account-info">
          <div class="profile-pic">
            <div class="pic">
              <% if (user.profile) { %>
                <img id="profileImage" src="<%= user.profile %>" alt="Profile Image" width="150">
              <% } else { %>
                <img id="profileImage" src="/img/default-profile.svg" alt="Profile Image" width="150">   
              <% } %>
              <button id="uploadButton">Add Profile Image</button>
              <input type="file" id="fileInput" name="profileImage" accept="image/*" style="display: none;">
            </div>
            <form class="edit" method="get" action="/editpass-page">
              <button class="edit-profile" type="submit">
                <img src="/img/edit-profile.svg">
                <p>Edit Password</p>
              </button>
            </form>
            <a href="/user/logout" class="logout-link">
              <button class="logout-profile" >
                <p>Log Out</p>
              </button>
            </a>
          </div>
          <div class="info">  
            <div class="input-sec">
              <div class="title">
                Email
              </div>
              <div class="input-div">
                <%= user.email %>
              </div>
            </div>
          </div>
        </div>
        <div class="member-list">
          <p>words List</p>
          <div class="list">
            <% if (words.length > 0) { %>
              <% words.forEach(word => { %>
                <%- include("components/word" , { word }) %>
              <% }); %>
            <% }else { %>
                <p>there is no any words</p>
            <% } %>

          </div>
        </div>
      </div>
      <%- include('components/nav') %>
    </div>
  </body>
  <script>
    document.getElementById("uploadButton").addEventListener("click", function() {
      document.getElementById("fileInput").click();
    });
  
    document.getElementById("fileInput").addEventListener("change", function(event) {
      const file = event.target.files[0];
      if (!file) return;
  
      const formData = new FormData();
      formData.append("profile", file);
  
      fetch("/user/upload-profile", {
        method: "POST",
        body: formData
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          document.getElementById("profileImage").src = data.imageUrl;
        } else {
          alert("Error uploading image");
        }
      })
      .catch(error => console.error("Error:", error));
    });
  </script>
</html>