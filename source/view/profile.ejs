<!DOCTYPE html>
<html>
  <head>
    <title>Profile</title>
    <link rel="stylesheet" href="styles/profile.css">
    <link rel="preconnect" 
     href="https://fonts.googleapis.com">
    <link rel="preconnect" 
    href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
      </head>
  <body>
    <div class="main-div">
      <div class="inner-div">
        <div class="account-info">
          <div class="profile-pic">
            <div class="pic">
              <img src="/img/profile photo.svg">
            </div>
            <div class="edit">
              <button class="edit-profile">
                <img src="/img/edit-profile.svg">
                <p>Edit Profile</p>
              </button>
              <a href="user/logout" class="logout-link">
                <button class="logout-profile" >
                  <p>Log Out</p>
                </button>
              </a>
              

            </div>
          </div>
          <div class="info">
            <div class="input-sec">
              <div class="title">
                Name
              </div>
              <div class="input-div">
                name
              </div>
            </div>
            <div class="input-sec">
              <div class="title">
                Last Name
              </div>
              <div class="input-div">
                last name
              </div>
            </div>
            <div class="input-sec">
              <div class="title">
                Username
              </div>
              <div class="input-div">
                username
              </div>
            </div>
            <div class="input-sec">
              <div class="title">
                Email
              </div>
              <div class="input-div">
                Email
              </div>
            </div>
          </div>
        </div>
        <div class="reports">
          <div class="weekly-reports">
            <p>
              weekly reports
            </p>
            <div class="chart">
              <img src="/img/report 1.svg" alt="Bar Chart" >
            </div>
          </div>
          <div class="data-reports">
            <p>
              data reports
            </p>
            <div class="chart">
              <img src="/img/report 2.svg" alt="Bar Chart" >
            </div>
          </div>
        </div>
      </div>
      <div class="navbar">

        <a href="/profile-page">
          <img src="img/navbar-profile.svg"
          alt="Profile" class="nav-item" >
        </a>

        <a href="/addword-page">
          <img src="img/navbar-pluse.svg" 
            alt="Add" class="nav-item">
        </a>

        <a href="/list-page">
          <img src="img/navbar-list.svg" 
            alt="List" class="nav-item">
        </a>

        <a href="/home-page">
          <img src="img/navbar-home.svg" 
          alt="Home" class="nav-item">
        </a>

      </div>
    </div>
  </body>
</html>